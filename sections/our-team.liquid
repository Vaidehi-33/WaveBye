<section class="our-team">
  <div class="section-header">
    <span class="tagline">{{ section.settings.tagline }}</span>
    <h2>{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_description }}</p>
  </div>
  <div class="team-grid">
    {% for member in section.blocks %}
      <div class="team-member">
        {% if member.settings.image %}
          <img 
            src="{{ member.settings.image | img_url: 'medium' }}" 
            alt="{{ member.settings.name }}" 
            class="team-photo"
          >
        {% else %}
          <div class="no-image-placeholder"></div>
        {% endif %}
        <div class="team-details">
          <h3>{{ member.settings.name }}</h3>
          <p class="job-title">{{ member.settings.job_title }}</p>
          <p class="description">{{ member.settings.description }}</p>
          <div class="social-links">
            {% if member.settings.linkedin_url %}
              <a href="{{ member.settings.linkedin_url }}" target="_blank">
                <i class="fab fa-linkedin"></i>
              </a>
            {% endif %}
            {% if member.settings.twitter_url %}
              <a href="{{ member.settings.twitter_url }}" target="_blank">
                <i class="fab fa-twitter"></i>
              </a>
            {% endif %}
            {% if member.settings.website_url %}
              <a href="{{ member.settings.website_url }}" target="_blank">
                <i class="fas fa-globe"></i>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.our-team {
  text-align: center;
  padding: 40px 0;
}

.our-team .section-header {
  margin-bottom: 40px;
}

.our-team .section-header .tagline {
  color: #8a6dff;
  font-size: 14px;
  font-weight: bold;
}

.our-team .section-header h2 {
  font-size: 32px;
  margin: 10px 0;
}

.our-team .team-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.team-member {
  width: 45%;
  display: flex;
  margin-bottom: 30px;
  align-items: center;
}

.team-photo {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
}

.no-image-placeholder {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #eee;
  display: inline-block;
  margin-right: 20px;
}

.team-details h3 {
  font-size: 18px;
  margin: 0;
}

.job-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}

.description {
  font-size: 14px;
  color: #666;
}

.social-links a {
  margin-right: 10px;
  color: #666;
  text-decoration: none;
}

.social-links a i {
  font-size: 16px;
}
</style>

{% schema %}
{
  "name": "Our Team",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "TAGLINE"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Team"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Team Member Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Full Name",
          "default": "Full Name"
        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job Title",
          "default": "Job Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique."
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        },
        {
          "type": "url",
          "id": "website_url",
          "label": "Website URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Team",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
