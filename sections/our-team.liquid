<style>
.our-team-section {
  padding: 50px 50px;
}
.section-header h2 {
  font-size: 36px;
  color: #222;
  font-weight: bold;
}
.section-header p {
  font-size: 18px;
  color: #777;
  margin-bottom: 40px;
}
.team-members {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}
.team-member {
  width: calc(50% - 10px); /* Adjusts to 50% width */
  display: flex; /* Use flex to manage image and details */
  align-items: center;
}
.member-image {
  flex: 0 0 auto; /* Fixed size for the image */
  margin-right: 15px; /* Spacing between image and text */
}
.team-member img {
  width: 150px;
  height: 150px;
  object-fit: cover;
  border-radius: 50%;
}
.member-details {
  flex: 1; /* Allows the details to take the remaining space */
  text-align: left; /* Align text to the left */
}
.team-member h3 {
  font-size: 22px;
  margin: 10px 0;
}
.team-member p {
  font-size: 16px;
  color: #666;
}
.social-icons {
  margin-top: 10px;
}
.social-icons a {
  margin-right: 10px; /* Spacing between icons */
}
</style>


