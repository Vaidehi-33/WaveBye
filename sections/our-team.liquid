<section class="our-team">
  <div class="section-header">
    <h2>{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_description }}</p>
  </div>
  <div class="team-members-grid">
    {% for i in (1..section.settings.team_member_count) %}
      {% capture member_image %}team_member_{{ i }}_image{% endcapture %}
      {% capture member_name %}team_member_{{ i }}_name{% endcapture %}
      {% capture member_job_title %}team_member_{{ i }}_job_title{% endcapture %}
      {% capture member_description %}team_member_{{ i }}_description{% endcapture %}
      
      <div class="team-member">
        {% if section.settings[member_image] %}
          <img 
            src="{{ section.settings[member_image] | img_url: 'medium' }}" 
            alt="{{ section.settings[member_name] }}" 
            width="{{ section.settings[member_image] | image_width: 'medium' }}" 
            height="{{ section.settings[member_image] | image_height: 'medium' }}"
          >
        {% else %}
          <p>No Image Available</p>
        {% endif %}
        <h3>{{ section.settings[member_name] }}</h3>
        <p class="job-title">{{ section.settings[member_job_title] }}</p>
        <p class="member-description">{{ section.settings[member_description] }}</p>
        <div class="social-icons">
          {% for j in (1..3) %}
            {% capture social_link %}team_member_{{ i }}_social_{{ j }}_link{% endcapture %}
            {% capture social_icon %}team_member_{{ i }}_social_{{ j }}_icon{% endcapture %}
            {% if section.settings[social_link] %}
              <a href="{{ section.settings[social_link] }}" target="_blank">
                <img src="{{ section.settings[social_icon] | img_url: 'small' }}" alt="Social Icon">
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.our-team {
  text-align: center;
  padding: 3rem 12rem;
}

.our-team .section-header h2 {
  font-size: 30px;
  margin-bottom: 10px;
  color: #0A1F44;
  font-weight: 800;
}

.our-team .section-header p {
  font-size: 16px;
  color: #0A1F44;
}

.team-members-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.team-member {
  width: 30%;
  text-align: center;
  margin-bottom: 2rem;
}

.team-member img {
  width: 100%;
  height: auto;
  margin-bottom: 15px;
  border-radius: 50%; /* Optional: Make images circular */
}

.team-member h3 {
  font-size: 20px;
  margin-bottom: 10px;
  color: #6C86FE;
}

.team-member .job-title {
  font-size: 16px;
  font-weight: bold;
  color: #0A1F44;
}

.team-member .member-description {
  font-size: 14px;
  color: #0A1F44;
}

.social-icons {
  margin-top: 10px;
}

.social-icons img {
  width: 24px;
  height: 24px;
  margin: 0 5px;
}
</style>

