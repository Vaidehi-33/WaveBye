{% schema %}
{
  "name": "Our Team Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Our Team"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Description",
      "default": "Meet the amazing people behind our company"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Team Member Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job Title",
          "default": "CEO"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "John is a highly experienced business leader."
        },
        {
          "type": "url",
          "id": "social_facebook",
          "label": "Facebook URL"
        },
        {
          "type": "url",
          "id": "social_twitter",
          "label": "Twitter URL"
        },
        {
          "type": "url",
          "id": "social_linkedin",
          "label": "LinkedIn URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Team Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="our-team-section">
  <div class="container">
    <h2>{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_description }}</p>
    <div class="team-members">
      {% for block in section.blocks %}
      <div class="team-member">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.name }}">
        {% endif %}
        <h3>{{ block.settings.name }}</h3>
        <p class="job-title">{{ block.settings.job_title }}</p>
        <p>{{ block.settings.description }}</p>
        <div class="social-icons">
          {% if block.settings.social_facebook %}
            <a href="{{ block.settings.social_facebook }}" target="_blank">
              <i class="fab fa-facebook"></i>
            </a>
          {% endif %}
          {% if block.settings.social_twitter %}
            <a href="{{ block.settings.social_twitter }}" target="_blank">
              <i class="fab fa-twitter"></i>
            </a>
          {% endif %}
          {% if block.settings.social_linkedin %}
            <a href="{{ block.settings.social_linkedin }}" target="_blank">
              <i class="fab fa-linkedin"></i>
            </a>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .our-team-section {
    padding: 60px 0;
    text-align: center;
  }
  .our-team-section h2 {
    font-size: 32px;
    margin-bottom: 10px;
  }
  .our-team-section p {
    font-size: 18px;
    margin-bottom: 40px;
    color: #666;
  }
  .team-members {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }
  .team-member {
    width: 22%;
    margin-bottom: 40px;
    text-align: center;
  }
  .team-member img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
    margin-bottom: 15px;
  }
  .team-member h3 {
    font-size: 22px;
    margin-bottom: 5px;
  }
  .team-member .job-title {
    font-size: 16px;
    color: #999;
    margin-bottom: 15px;
  }
  .team-member .social-icons {
    margin-top: 10px;
  }
  .team-member .social-icons a {
    margin: 0 5px;
    font-size: 18px;
    color: #333;
    text-decoration: none;
  }
  .team-member .social-icons a:hover {
    color: #0073b1;
  }
</style>
