<!-- Our Team Section -->
<section class="our-team-section">
  <div class="container">
    <!-- Section Title and Description -->
    <div class="section-header">
      <h2>{{ section.settings.team_title }}</h2>
      <p>{{ section.settings.team_description }}</p>
    </div>

    <!-- Team Members -->
    <div class="team-members">
      <div class="team-member">
        <img src="{{ section.settings.team_member_1_image | img_url: 'large' }}" alt="{{ section.settings.team_member_1_name }}">
        <h3>{{ section.settings.team_member_1_name }}</h3>
        <p>{{ section.settings.team_member_1_job_title }}</p>
        <p>{{ section.settings.team_member_1_description }}</p>
        <!-- Social Icons -->
        <div class="social-icons">
          {% if section.settings.team_member_1_linkedin %}
            <a href="{{ section.settings.team_member_1_linkedin }}" target="_blank"><i class="fab fa-linkedin"></i></a>
          {% endif %}
          {% if section.settings.team_member_1_facebook %}
            <a href="{{ section.settings.team_member_1_facebook }}" target="_blank"><i class="fab fa-facebook"></i></a>
          {% endif %}
        </div>
      </div>
      <!-- Repeat for other members (up to 4) -->
      <div class="team-member">
        <img src="{{ section.settings.team_member_2_image | img_url: 'large' }}" alt="{{ section.settings.team_member_2_name }}">
        <h3>{{ section.settings.team_member_2_name }}</h3>
        <p>{{ section.settings.team_member_2_job_title }}</p>
        <p>{{ section.settings.team_member_2_description }}</p>
        <div class="social-icons">
          {% if section.settings.team_member_2_linkedin %}
            <a href="{{ section.settings.team_member_2_linkedin }}" target="_blank"><i class="fab fa-linkedin"></i></a>
          {% endif %}
          {% if section.settings.team_member_2_facebook %}
            <a href="{{ section.settings.team_member_2_facebook }}" target="_blank"><i class="fab fa-facebook"></i></a>
          {% endif %}
        </div>
      </div>
      <!-- Add more members as needed -->
    </div>
  </div>
</section>

<style>
.our-team-section {
  padding: 50px 0;
}
.section-header h2 {
  font-size: 36px;
  color: #222;
  font-weight: bold;
}
.section-header p {
  font-size: 18px;
  color: #777;
  margin-bottom: 40px;
}
.team-members {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}
.team-member {
  width: calc(50% - 10px);
  text-align: center;
}
.team-member img {
  border-radius: 50%;
  margin-bottom: 15px;
}
.team-member h3 {
  font-size: 22px;
  margin: 10px 0;
}
.team-member p {
  font-size: 16px;
  color: #555;
}
.social-icons {
  margin-top: 15px;
}
.social-icons a {
  margin: 0 5px;
  font-size: 18px;
  color: #333;
}
.social-icons a:hover {
  color: #0077b5; /* LinkedIn color */
}

</style>

