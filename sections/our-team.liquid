<!-- Our Team Section -->
<section class="our-team-section">
  <div class="container">
    <!-- Section Title and Description -->
    <div class="section-header">
      <h2>{{ section.settings.team_title }}</h2>
      <p>{{ section.settings.team_description }}</p>
    </div>

    <!-- Team Members -->
    <div class="team-members">
      {% for block in section.blocks %}
        <div class="team-member">
          <img src="{{ block.settings.image | img_url: 'large' }}" alt="{{ block.settings.name }}">
          <h3>{{ block.settings.name }}</h3>
          <p class="job-title">{{ block.settings.job_title }}</p>
          <p class="description">{{ block.settings.description }}</p>
          <!-- Social Icons -->
          <div class="social-icons">
            {% if block.settings.linkedin %}
              <a href="{{ block.settings.linkedin }}" target="_blank"><i class="fab fa-linkedin"></i></a>
            {% endif %}
            {% if block.settings.facebook %}
              <a href="{{ block.settings.facebook }}" target="_blank"><i class="fab fa-facebook"></i></a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.our-team-section {
  padding: 50px 0;
  background-color: #f9f9f9;
}
.section-header h2 {
  font-size: 36px;
  color: #222;
  font-weight: bold;
  text-align: center;
}
.section-header p {
  font-size: 18px;
  color: #777;
  text-align: center;
  margin-bottom: 40px;
}
.team-members {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
}
.team-member {
  width: calc(33.333% - 20px);
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 20px;
  text-align: center;
  transition: transform 0.3s ease;
}
.team-member:hover {
  transform: translateY(-10px);
}
.team-member img {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 15px;
}
.team-member h3 {
  font-size: 22px;
  margin: 10px 0;
  color: #333;
}
.job-title {
  font-size: 16px;
  font-weight: bold;
  color: #0077b5; /* LinkedIn color */
}
.description {
  font-size: 14px;
  color: #555;
  margin-bottom: 20px;
}
.social-icons {
  margin-top: 15px;
}
.social-icons a {
  margin: 0 10px;
  font-size: 18px;
  color: #333;
}
.social-icons a:hover {
  color: #0077b5; /* LinkedIn color */
}
@media (max-width: 992px) {
  .team-member {
    width: calc(50% - 20px);
  }
}
@media (max-width: 768px) {
  .team-member {
    width: 100%;
  }
}
</style>

<!-- Schema for Customization -->
{% schema %}
{
  "name": "Our Team",
  "settings": [
    {
      "type": "text",
      "id": "team_title",
      "label": "Title",
      "default": "Our Team"
    },
    {
      "type": "textarea",
      "id": "team_description",
      "label": "Description",
      "default": "Meet our team of professionals."
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Team Member Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Full Name"
        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job Title",
          "default": "Job Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Short bio or description."
        },
        {
          "type": "url",
          "id": "linkedin",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "facebook",
          "label": "Facebook URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Team",
      "category": "Team"
    }
  ]
}
{% endschema %}
