<section class="our-team">
  <div class="section-header">
    <span class="tagline">{{ section.settings.tagline }}</span>
    <h2>{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_description }}</p>
  </div>
  <div class="team-grid">
    {% for block in section.blocks %}
      {% if block.type == 'team_member' %}
        <div class="team-member">
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: 'medium' }}" 
              alt="{{ block.settings.name }}" 
              class="team-photo"
            >
          {% else %}
            <div class="no-image-placeholder"></div>
          {% endif %}
          <div class="team-details">
            <h3>{{ block.settings.name }}</h3>
            <p class="job-title">{{ block.settings.job_title }}</p>
            <p class="description">{{ block.settings.description }}</p>
            <div class="social-links">
              {% if block.settings.linkedin_url %}
                <a href="{{ block.settings.linkedin_url }}" target="_blank">
                  <i class="fab fa-linkedin"></i>
                </a>
              {% endif %}
              {% if block.settings.twitter_url %}
                <a href="{{ block.settings.twitter_url }}" target="_blank">
                  <i class="fab fa-twitter"></i>
                </a>
              {% endif %}
              {% if block.settings.website_url %}
                <a href="{{ block.settings.website_url }}" target="_blank">
                  <i class="fas fa-globe"></i>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
/* Your existing CSS here */
</style>

{% schema %}
{
  "name": "Our Team",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "TAGLINE"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Team"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Team Member Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Full Name",
          "default": "Full Name"
        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job Title",
          "default": "Job Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        },
        {
          "type": "url",
          "id": "website_url",
          "label": "Website URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Team",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
