{% schema %}
{
  "name": "How to Use and FAQ",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "How to Use and FAQ",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="product__accordion">
  {%- if product.metafields.custom.how_to_use != blank -%}
    <details class="accordion__item">
      <summary class="accordion__header">
        <span>How to Use</span>
        <span class="icon plus">+</span>
      </summary>
      <div class="accordion__content rte">
        {{ product.metafields.custom.how_to_use.value }}
      </div>
    </details>
  {%- endif -%}

  {%- if product.metafields.custom.faq != blank -%}
    <details class="accordion__item">
      <summary class="accordion__header">
        <span>FAQ</span>
        <span class="icon plus">+</span>
      </summary>
      <div class="accordion__content rte">
        {{ product.metafields.custom.faq.value }}
      </div>
    </details>
  {%- endif -%}
</div>

<style>
  .accordion__item {
    margin-bottom: 15px;
  }

  .accordion__header {
    display: flex;
    justify-content: space-between;
    cursor: pointer;
    background-color: #f5f5f5;
    padding: 10px;
    border: 1px solid #ccc;
  }

  .accordion__content {
    padding: 10px;
    border: 1px solid #ccc;
    border-top: none;
    display: none; /* Hide content by default */
  }

  .accordion__item[open] .accordion__content {
    display: block; /* Show content when open */
  }

  .icon.plus {
    margin-left: 10px;
    transition: transform 0.3s; /* Add transition for smooth rotation */
  }

  details[open] .plus {
    transform: rotate(45deg); /* Rotate the icon when open */
  }
</style>

<script>
  // Ensure the script runs after the document is fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.accordion__header').forEach(header => {
      header.addEventListener('click', () => {
        const details = header.parentNode;
        details.toggleAttribute('open');
      });
    });
  });
</script>
