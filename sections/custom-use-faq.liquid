{% schema %}
{
  "name": "How to Use and FAQ",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "How to Use and FAQ",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="product__accordion">
  {%- if product.metafields.custom.how_to_use != blank -%}
    <details class="accordion__item">
      <summary class="accordion__header">
        <span>How to Use</span>
        <span class="icon plus">+</span>
      </summary>
      <div class="accordion__content rte">
        <ul>
          {% assign how_to_use_content = product.metafields.custom.how_to_use.value | parse_json %}
          {% for point in how_to_use_content.children %}
            <li>
              {% for text in point.children %}
                <span>{{ text.value }}</span>
              {% endfor %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </details>
  {%- endif -%}

  {%- if product.metafields.custom.faq != blank -%}
    <details class="accordion__item">
      <summary class="accordion__header">
        <span>FAQ</span>
        <span class="icon plus">+</span>
      </summary>
      <div class="accordion__content rte">
        {% assign faq_content = product.metafields.custom.faq.value | parse_json %}
        {% for item in faq_content.children %}
          {% if item.type == 'paragraph' %}
            <p>
              {% for text in item.children %}
                <span
                  {% if text.bold %}
                    style="font-weight: bold;"
                  {% endif %}
                >
                  {{- text.value -}}
                </span>
              {% endfor %}
            </p>
          {% elsif item.type == 'list' %}
            <ul>
              {% for list_item in item.children %}
                <li>
                  {% for text in list_item.children %}
                    <span>{{ text.value }}</span>
                  {% endfor %}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        {% endfor %}
      </div>
    </details>
  {%- endif -%}
</div>

<style>
  .accordion__item {
    margin-bottom: 15px;
  }

  .accordion__header {
    display: flex;
    justify-content: space-between;
    cursor: pointer;
    background-color: #f5f5f5;
    padding: 10px;
    border: 1px solid #ccc;
  }

  .accordion__content {
    padding: 10px;
    border: 1px solid #ccc;
    border-top: none;
    display: none; /* Hide content by default */
  }

  details[open] .accordion__content {
    display: block; /* Show content when details is open */
  }

  .icon.plus {
    margin-left: 10px;
    transition: transform 0.3s; /* Add transition for smooth rotation */
  }

  details[open] .plus {
    transform: rotate(45deg); /* Rotate the icon when open */
  }
</style>
