  }

  /* Quiz Step Buttons and Radio Inputs */
  label {
    display: block;
    margin: 10px 0;
    font-size: 16px;
  }

  label input {
    margin-right: 10px;
  }

  /* Next Button */
  .next-button {
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #6C86FE;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .next-button:hover {
