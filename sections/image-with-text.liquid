  }

  /* General Button */
  button {
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  /* Shop Now Button */
  #shopNowBtn {
