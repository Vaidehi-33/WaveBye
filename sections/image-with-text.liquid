  /* Popup Content */
  .popup-content {
    display: flex; /* Use flexbox for side-by-side layout */
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    width: 80%;
    max-width: 800px; /* Increased max-width for better layout */
    position: relative;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* Left Section */
  .popup-left {
    flex: 0 0 70%; /* Takes up the left 70% */
