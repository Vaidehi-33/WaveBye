  }

  /* Right Section */
  .popup-right {
    flex: 0 0 30%; /* Solid color section on the right */
    background-color: #D9D9D9;
  }

  /* Close Button */
  .close-button {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    color: #333;
