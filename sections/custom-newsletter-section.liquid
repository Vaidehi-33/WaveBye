<!-- Newsletter Section -->
{%- style -%}
    .newsletter-section-container {
      padding: 4rem;
      display: flex;
      justify-content: center;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .newsletter-section {
      height: 320px;
      width: 1018px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: {{ section.settings.background_color }};
      padding: 40px;
      /* border-radius: 10px; */

    }

    @media (max-width: 359px) {
    .newsletter-section {
      width: 1018px;
    }
  }



    .newsletter-title {
      font-size: {{ section.settings.title_font_size }}px;
      font-weight: bold;
      margin-bottom: 10px;
      text-align: center;
      font-family: "Outfit", sans-serif;
    }

    .newsletter-description {
      font-size: {{ section.settings.description_font_size }}px;
      margin-bottom: 20px;
      text-align: center;
      font-family: "Open Sans", sans-serif;
    }

    .newsletter-form {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      flex-direction: row !important;
    }

    .newsletter-form input {
      border: 2px solid #6C86FE;
      padding: 10px;
      font-size: 16px;
      width: 300px;
    }

    .newsletter-form button {
      padding: 10px 20px;
      background-color: {{ section.settings.button_color }};
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 5px;
      width: 10rem;
    }
{%- endstyle -%}
<div class="newsletter-section-container" id="newsletter-section">
  <div class="newsletter-section section-{{ section.id }}-padding">
    <h2 class="newsletter-title">{{ section.settings.title }}</h2>
    <p class="newsletter-description">{{ section.settings.description }}</p>

    {% form 'customer', class: 'newsletter-form' %}
      <div class="newsletter-form__field-wrapper">
        <input
          id="NewsletterForm--{{ section.id }}"
          type="email"
          name="contact[email]"
          class="field__input"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            autofocus
            aria-invalid="true"
            aria-describedby="Newsletter-error--{{ section.id }}"
          {% elsif form.posted_successfully? %}
            aria-describedby="Newsletter-success--{{ section.id }}"
          {% endif %}
          placeholder="{{ 'newsletter.label' | t }}"
          required
          style="border: 2px solid #6C86FE; padding: 10px; font-size: 16px; width: 300px;"
        >
      </div>
      <button
        type="submit"
        class="newsletter-form__button field__button"
        name="commit"
        id="Subscribe"
        aria-label="{{ 'newsletter.button_label' | t }}"
        style="padding: 10px 20px; background-color: {{ section.settings.button_color }}; color: white; border: none; cursor: pointer; font-size: 16px; border-radius: 50px;"
      >
        {{ section.settings.button_text }}
      </button>
      {%- if form.errors -%}
        <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{- form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email -}}
        </small>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
        <h3
          class="newsletter-form__message newsletter-form__message--success form__message"
          id="Newsletter-success--{{ section.id }}"
          tabindex="-1"
          autofocus
        >
          <span class="svg-wrapper">
            {{- 'icon-success.svg' | inline_asset_content -}}
          </span>
          {{- 'newsletter.success' | t }}
        </h3>
      {%- endif -%}
    {% endform %}
  </div>
</div>

{% schema %}
 {
   "name": "Custom Newsletter Section",
"settings": [
     {
       "type": "text",
       "id": "title",
       "label": "Newsletter Title",
       "default": "Stay Updated!"
     },
     {
       "type": "text",
       "id": "description",
       "label": "Newsletter Description",
       "default": "Sign up for our newsletter to receive the latest news and exclusive offers."
     },
     {
       "type": "text",
       "id": "button_text",
       "label": "Button Text",
       "default": "Subscribe"
     },
     {
       "type": "color",
       "id": "background_color",
       "label": "Background Color",
       "default": "#f7f7f7"
     }, {
       "type": "color",
       "id": "button_color",
       "label": "Button Color",
       "default": "#333333"
     }, {
       "type": "range",
       "id": "padding_top",
       "label": "Padding Top",
       "min": 0,
       "max": 100,
       "step": 5,
       "unit": "px",
       "default": 40
     }, {
       "type": "range",
       "id": "padding_bottom",
       "label": "Padding Bottom",
       "min": 0,
       "max": 100,
       "step": 5,
       "unit": "px",
       "default": 40
     }, {
       "type": "range",
       "id": "title_font_size",
       "label": "Title Font Size",
       "min": 16,
       "max": 64,
       "step": 1,
       "unit": "px",
       "default": 32
     }, {
       "type": "range",
       "id": "description_font_size",
       "label": "Description Font Size",
       "min": 12,
       "max": 24,
       "step": 1,
       "unit": "px",
       "default": 16
     }
   ],
   "presets": [
     {
       "name": "Newsletter Section",
       "category": "Custom"
     }
   ]
 }
{% endschema %}
