<!-- Newsletter Section -->
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'newsletter-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  html { scroll-behavior: smooth; }

  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      border-top: none;
      border-bottom: none;
  }

  @media screen and (min-width: 750px) {
      html { scroll-behavior: smooth; }

      .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
          border-top: none;
          border-bottom: none;
      }
  }
{%- endstyle -%}

{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when '@app' -%}
      {% render block %}
    {%- when 'heading' -%}
      {{ block.settings.heading }}
    {%- when 'paragraph' -%}
      {{ block.settings.text }}
    {%- when 'email_form' -%}
      {% form 'customer', class: 'newsletter-form' %}
        {{ 'newsletter.label' | t }}
        {{- 'icon-arrow.svg' | inline_asset_content -}}
        {%- if form.errors -%}
          {{- 'icon-error.svg' | inline_asset_content -}}
          {{- form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email -}}
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          {{- 'icon-success.svg' | inline_asset_content -}}
          {{- 'newsletter.success' | t }}
        {%- endif -%}
      {% endform %}
  {%- endcase -%}
{%- endfor -%}

<div class="newsletter-section-container" id="newsletter-section">
  <div class="newsletter-section section-{{ section.id }}-padding">
    <h2 class="newsletter-title">{{ section.settings.title }}</h2>
    <p class="newsletter-description">{{ section.settings.description }}</p>

    <form class="newsletter-form" onsubmit="handleSubmit(event)">
      <input type="email" placeholder="{{ 'newsletter.label' | t }}" required>
      <button type="submit">{{ section.settings.button_text }}</button>
    </form>
  </div>
</div>

<script>
  function handleSubmit(event) {
      event.preventDefault(); // Prevent default form submission

      const emailInput = event.target.querySelector('input[type="email"]');
      const email = emailInput.value;

      // Here you can add your logic to handle the email subscription, e.g., sending to your backend
      console.log('Email submitted:', email);

      // Optionally, you can clear the input field after submission
      emailInput.value = '';
      alert('Thank you for subscribing!'); // Optional: Show a thank you message
  }
</script>

{% schema %}
{
  "name": "Custom Newsletter Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Newsletter Title",
      "default": "Stay Updated!"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Newsletter Description",
      "default": "Sign up for our newsletter to receive the latest news and exclusive offers."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f7f7f7"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size",
      "min": 16,
      "max": 64,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Description Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Newsletter Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
