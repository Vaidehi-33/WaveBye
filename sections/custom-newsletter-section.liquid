{{ 'section-email-signup-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .newsletter-section-container {
      padding: 4rem;
      display: flex;
      justify-content: center;
  }
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .newsletter-section {
      height: 270px;
      width: 900px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: {{ section.settings.background_color }};
      padding: 30px;
  }
  .newsletter-title {
      font-size: {{ section.settings.title_font_size }}px;
      font-weight: bold;
      margin-bottom: 10px;
      text-align: center;
      font-family: "Outfit", sans-serif;
  }
  .newsletter-description {
      font-size: {{ section.settings.description_font_size }}px;
      margin-bottom: 20px;
      text-align: center;
      font-family: "Open Sans", sans-serif;
  }
  .newsletter-form {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      flex-direction: row !important;
  }
  .newsletter-form input {
      border: 2px solid #6C86FE;
      padding: 10px;
      font-size: 16px;
      width: 300px;
  }
  .newsletter-form button {
      padding: 10px 20px;
      background-color: {{ section.settings.button_color }};
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      border-radius: 50px;
  }
{%- endstyle -%}

<div class="newsletter-section-container" id="newsletter-section">
  <div class="newsletter-section section-{{ section.id }}-padding">
    <h2 class="newsletter-title">{{ section.settings.title }}</h2>
    <p class="newsletter-description">{{ section.settings.description }}</p>

    <form class="newsletter-form" onsubmit="handleSubmit(event)">
      <input
        type="email"
        placeholder="{{ 'newsletter.label' | t }}"
        required
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
      >
      <button
        type="submit"
        class="newsletter-form__button field__button"
        id="Subscribe"
        aria-label="{{ 'newsletter.button_label' | t }}"
      >
        <span class="svg-wrapper">{{- 'icon-arrow.svg' | inline_asset_content -}}</span>
      </button>
    </form>
  </div>
</div>

<script>
  async function handleSubmit(event) {
      event.preventDefault(); // Prevent default form submission

      const emailInput = event.target.querySelector('input[type="email"]');
      const email = emailInput.value;

      try {
          // Replace 'your_api_endpoint' with your actual API endpoint to handle subscriptions
          const response = await fetch('https://your_api_endpoint/subscribe', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              },
              body: JSON.stringify({ email: email })
          });

          if (!response.ok) {
              throw new Error('Network response was not ok');
          }

          const result = await response.json();
          console.log('Subscription successful:', result);

          // Clear the input field after submission
          emailInput.value = '';
          alert('Thank you for subscribing!'); // Optional: Show a thank you message

      } catch (error) {
          console.error('Error during subscription:', error);
          alert('There was an error subscribing. Please try again later.'); // Optional: Error handling
      }
  }
</script>

{% schema %}
{
  "name": "Custom Newsletter Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Newsletter Title",
      "default": "Stay Updated!"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Newsletter Description",
      "default": "Sign up for our newsletter to receive the latest news and exclusive offers."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f7f7f7"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size",
      "min": 16,
      "max": 64,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Description Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Newsletter Section",
      "category": "Custom"
    }
  ]
}
