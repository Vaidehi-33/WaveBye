{% schema %}
{
  "name": "Notification",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Notification Center"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 24,
      "min": 16,
      "max": 48,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="background-wrapper" style="background-color: #FFFEF9;">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      <h2 class="section-heading" style="font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading_text }}
      </h2>
      <div class="notification-wrapper">
        {% for block in section.blocks %}
          <div class="notification-block">
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.message }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.background-wrapper {
  padding: 20px 0;
  background-color: #FFFEF9; /* Background color behind the section */
}

.notification-section {
  padding: 20px 0;
  margin-left: 170px;
  margin-right: 170px;
  border-radius: 5px;
  background-color: #EEF1FF; /* Section background color */
}

.section-heading {
  text-align: center;
  color: #0A1F44D9;
  font-weight: 600;
  margin-bottom: 20px;
}

.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.notification-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10%;
}

.notification-block {
  flex: 1 1 calc(20% - 10px);
  padding: 15px;
  border-radius: 5px;
  text-align: center;
  box-shadow: 2px 4px 10px #8E8E8E09 !important; /* Ensure the shadow is applied */
}

.notification-block img {
  max-width: 100%;
  height: auto;
  border-radius: 5px;
}

.notification-block h3 {
  margin: 10px 0 5px;
}

.notification-block p {
  margin: 0;
}
</style>
