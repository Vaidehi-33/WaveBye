{% schema %}
{
  "name": "Image Gallery Section",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Gallery",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="image-gallery">
  <div class="page-width">
    <div class="grid grid--5-col">
      {% for block in section.blocks %}
        <div class="grid__item">
          <div class="image-block">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.heading }}" />
            {% endif %}
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.image-gallery {
  padding: 20px 0;
}

.image-block {
  text-align: center;
  margin: 0 15px;
}

.image-block img {
  max-width: 100%;
  height: auto;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.grid__item {
  flex: 1 1 calc(20% - 30px); /* 5 columns with space */
  margin: 10px;
}

@media (max-width: 768px) {
  .grid__item {
    flex: 1 1 calc(50% - 30px); /* 2 columns on small screens */
  }
}

@media (max-width: 480px) {
  .grid__item {
    flex: 1 1 100%; /* 1 column on extra small screens */
  }
}
</style>