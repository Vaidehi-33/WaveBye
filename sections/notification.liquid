{% schema %}
{
  "name": "Notification",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Notification Center"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 24,
      "min": 16,
      "max": 48,
      "step": 1
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#0A1F44"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="background-wrapper" style="background-color: #FFFEF9;">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      <h2 class="section-heading" style="font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading_text }}
      </h2>
      <div class="notification-wrapper">
        {% for block in section.blocks %}
          <div class="notification-block">
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
            <h3 class="notification-subtitle">{{ block.settings.title }}</h3>
            <p class="notification-msg">{{ block.settings.message }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="button-wrapper">
        <a
          href="#newsletter-section"
          class="dynamic-button"
          style="
            background-color: {{ section.settings.button_color }};
            color: {{ section.settings.button_text_color }};
          "
        >
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  html {
    scroll-behavior: smooth;
  }

  .background-wrapper {
    padding: 20px 0;
    background-color: #FFFEF9; /* Background color behind the section */
  }

  .notification-section {
    padding: 80px 0;
    border-radius: 5px;
    background-color: #EEF1FF; /* Section background color */
    box-shadow: 2px 4px 10px #8E8E8E09; /* Add shadow to the entire section */
  }

  .section-heading {
    /* Custom heading style */
    font-size: 36px; /* Heading font size */
    max-width: 450px;
    font-family: "Outfit", sans-serif;
    font-weight: 600;
    line-height: 48px;
    text-align: center; /* Center align */
    color: #0A1F44D9; /* Heading color */
    margin: 0 auto 50px auto; /* Center the heading with bottom margin */
  }

  .notification-msg {
    font-family: "Open Sans", sans-serif;
    font-size: 13px;
    color: #0A1F44D9; /* Message color */
    font-weight: 400;
    line-height: 18px;
    text-align: center; /* Center align the message text */
    max-width: 150px; /* Max width to constrain the message text */
    margin: 0 auto; /* Center the message content */
  }

  .notification-subtitle {
    color: #0A1F44D9; /* Subtitle color */
    font-family: "Outfit", sans-serif;
    font-size: 18px; /* Subtitle font size */
    font-weight: 600;
    line-height: 16px;
    text-align: center; /* Center align the subtitle */
    margin: 10px 0; /* Space between the subtitle and the message */
  }

  .page-width {
    max-width: 1500px; /* Maximum width of the section */
    padding: 0 20px; /* Padding around the content */
  }

  .notification-wrapper {
    display: flex; /* Enable flexbox for layout */
    flex-wrap: wrap; /* Allow wrapping of content */
    justify-content: space-between; /* Space between items */
    margin: 0 auto; /* Center the notification blocks */
    gap: 20px; /* Space between each block */
  }

  .notification-block {
    flex: 1 1 calc(20% - 20px); /* Make the blocks flexible with space between */
    padding: 10px; /* Padding inside the block */
    border-radius: 5px; /* Rounded corners */
    text-align: center; /* Center align content inside block */
    background-color: #ffffff; /* Background for each block */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }

  .notification-block img {
    max-width: 80%; /* Limit image size */
    border-radius: 5px; /* Rounded corners for images */
    margin-bottom: 10px; /* Space below the image */
    opacity: 1; /* Ensure the image is visible */
    height: auto; /* Auto height to keep image proportions */
  }

  .button-wrapper {
    text-align: center; /* Center align the button */
    margin-top: 20px; /* Space above the button */
  }

  .dynamic-button {
    padding: 10px 30px; /* Padding inside the button */
    border-radius: 30px; /* Rounded button */
    text-decoration: none; /* Remove underline */
    font-weight: 700; /* Make button text bold */
    font-size: 14px; /* Button font size */
    background-color: {{ section.settings.button_color }}; /* Button background */
    color: {{ section.settings.button_text_color }}; /* Button text color */
    transition: background-color 0.3s ease; /* Smooth transition for hover */
    font-family: Open Sans, sans-serif;
  }

  .dynamic-button:hover {
    opacity: 0.85; /* Hover effect */
  }

  /* Add responsiveness for smaller devices */
  @media (max-width: 768px) {
    .notification-wrapper {
      flex-direction: column; /* Stack blocks on smaller screens */
      align-items: center; /* Center align them */
    }

    .notification-block {
      flex: 1 1 100%; /* Full width blocks */
      margin-bottom: 20px; /* Space between stacked blocks */
    }

    .section-heading {
      font-size: 28px; /* Smaller heading size for mobile */
      line-height: 36px;
    }

    .dynamic-button {
      font-size: 12px; /* Smaller button text */
      padding: 8px 20px; /* Adjust button padding */
    }
  }
</style>
