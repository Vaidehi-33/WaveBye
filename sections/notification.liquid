{% schema %}
{
  "name": "Notification",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Notification Center"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 24,
      "min": 16,
      "max": 48,
      "step": 1
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#0A1F44"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="background-wrapper" style="background-color: #FFFEF9;">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      <h2 class="section-heading" style="font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading_text }}
      </h2>
      <div class="notification-wrapper">
        {% for block in section.blocks %}
          <div class="notification-block">
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
            <h3 class="notification-subtitle">{{ block.settings.title }}</h3>
            <p class="notification-msg">{{ block.settings.message }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="button-wrapper">
        <a href="#newsletter-section" class="dynamic-button" style="
  background-color: {{ section.settings.button_color }};
  color: {{ section.settings.button_text_color }};
">
  {{ section.settings.button_text }}
</a>

      </div>
    </div>
  </div>
</div>

<style>
  html {
  scroll-behavior: smooth;
}

.background-wrapper {
  padding: 20px 0;
  background-color: #FFFEF9; /* Background color behind the section */
}

.notification-section {
  padding: 20px 0;
  margin-left: 170px;
  margin-right: 170px;
  border-radius: 5px;
  background-color: #EEF1FF; /* Section background color */
  box-shadow: 2px 4px 10px #8E8E8E09; /* Add shadow to the entire section */
}

.section-heading {
  //styleName: HL1 48pt;
font-family: Open Sans;
line-height: 48px;
  text-align: center;
  color: #0A1F44D9;
  font-weight: 600;
  margin-bottom: 20px;
  max-width: 400px; /* Limit the width */
  margin: 0 auto 20px auto; /* Center the heading and keep bottom margin */
}

  .notification-msg{
    //styleName: Text/Regular/Normal - Paragraph;
font-family: Open Sans;
font-size: 12px;
font-weight: 400;
line-height: 15px;
text-align: center;

  }

  .notification-subtitle{
    //styleName: Hl2 24pt;
font-family: Open Sans;
font-size: 20px;
font-weight: 500;
line-height: 29.73px;
text-align: center;

  }
.page-width {
  max-width: 1500px;
  margin: 0 auto;
  padding: 0 20px;
  margin-bottom:30px;
}

.notification-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.notification-block {
  flex: 1 1 calc(20% - 10px);
  padding: 5px;
  border-radius: 5px;
  text-align: center;
}

.notification-block img {
  max-width: 80%;
  border-radius: 5px;
height: 53.07px; 
top: 2.47px;
gap: 0px;
opacity: 0px;

}

/* Button styling */
.button-wrapper {
  text-align: center;
  margin-top: 20px;
}

.dynamic-button {
  padding: 10px 30px;
  border-radius: 30px;
  text-decoration: none;
  font-weight: bold;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.dynamic-button:hover {
  opacity: 0.85;
}
</style>
