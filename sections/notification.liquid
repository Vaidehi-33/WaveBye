{% schema %}
{
  "name": "Notification",
  "settings": [],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="notification-wrapper">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      {% for block in section.blocks %}
        <div class="notification-block">
          <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.message }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.notification-wrapper {
  background-color: inherit; /* Set to inherit the background of the body */
  padding: 0 20px; /* Optional, adjust for spacing around the section */
}

.notification-section {
  max-width: 900px; /* Set a smaller width for the section */
  margin: 0 auto; /* Center the section */
  padding: 20px;
  border-radius: 10px; /* Optional, adds rounded corners */
}

.page-width {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.notification-block {
  flex: 1 1 calc(20% - 10px);
  padding: 15px;
  border-radius: 5px;
  text-align: center;
}

.notification-block img {
  max-width: 100%;
  height: auto;
  border-radius: 5px;
}

.notification-block h3 {
  margin: 10px 0 5px;
}

.notification-block p {
  margin: 0;
}
</style>
