{% schema %}
{
  "name": "Notification",
  "settings": [],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#f8d7da"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="notification-section">
  <div class="page-width">
    {% for block in section.blocks %}
      <div class="notification-block" style="background-color: {{ block.settings.background_color }}">
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.message }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.notification-section {
  padding: 20px 0;
}

.notification-block {
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 15px;
}

.notification-block h3 {
  margin: 0;
}

.notification-block p {
  margin: 5px 0 0;
}
</style>