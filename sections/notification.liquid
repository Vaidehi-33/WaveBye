{% schema %}
{
  "name": "Notification",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Notification Center"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 24,
      "min": 16,
      "max": 48,
      "step": 1
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#0A1F44"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="background-wrapper" style="background-color: #FFFEF9;">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      <h2 class="section-heading" style="font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading_text }}
      </h2>
      <div class="notification-wrapper">
        {% for block in section.blocks %}
          <div class="notification-block">
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
            <h3 class="notification-subtitle">{{ block.settings.title }}</h3>
            <p class="notification-msg">{{ block.settings.message }}</p>
          </div>
        {% endfor %}
      </div>
      

          {% form 'customer', class: 'newsletter-form' %}
            <div class="newsletter-form__field-wrapper">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="Your email address"
                required
                style="border: 2px solid #6C86FE; padding: 10px; font-size: 16px; width: 300px;"
              >
            </div>
            <button
              type="submit"
              class="newsletter-form__button field__button"
              name="commit"
              id="Subscribe"
              aria-label="Subscribe"
              style="padding: 10px 20px; background-color: {{ section.settings.button_color }}; color: white; border: none; cursor: pointer; font-size: 16px; border-radius: 50px;"
            >
              {{ section.settings.button_text }}
            </button>
          {% endform %}
        
      </div>
</div>

