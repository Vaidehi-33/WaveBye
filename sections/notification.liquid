{% schema %}
{
  "name": "Notification",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Notification Center"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "default": 24,
      "min": 16,
      "max": 48,
      "step": 1
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#0A1F44"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="background-wrapper" style="background-color: #FFFEF9;">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      <h2 class="section-heading" style="font-size: {{ section.settings.heading_font_size }}px;">
        {{ section.settings.heading_text }}
      </h2>
      <div class="notification-wrapper">
        {% for block in section.blocks %}
          <div class="notification-block">
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
            <h3 class="notification-subtitle">{{ block.settings.title }}</h3>
            <p class="notification-msg">{{ block.settings.message }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="button-wrapper">
        <a
          href="#newsletter-section"
          class="dynamic-button"
          style="
            background-color: {{ section.settings.button_color }};
            color: {{ section.settings.button_text_color }};
          "
        >
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  html {
    scroll-behavior: smooth;
  }

  .background-wrapper {
    padding: 20px 0;
    background-color: #FFFEF9; /* Background color behind the section */
  }

  .notification-section {
    padding: 80px 0;
    border-radius: 5px;
    background-color: #EEF1FF; /* Section background color */
    box-shadow: 2px 4px 10px #8E8E8E09; /* Add shadow to the entire section */
  }

  .section-heading {
    font-size: 36px;
    max-width: 450px;
    font-family: "Outfit", sans-serif;
    font-weight: 600;
    line-height: 48px;
    text-align: center;
    color: #0A1F44D9;
    margin: 0 auto 50px auto; /* Center the heading with bottom margin */
  }

  .notification-msg {
    font-family: "Open Sans", sans-serif;
    font-size: 13px;
    color: #0A1F44D9;
    font-weight: 400;
    line-height: 18px;
    text-align: center;
    max-width: 150px;
    margin: 10px auto; /* Add space between title and message */
  }

  .notification-subtitle {
    color: #0A1F44D9;
    font-family: "Outfit", sans-serif;
    font-size: 18px;
    font-weight: 600;
    line-height: 16px;
    text-align: center;
    margin: 10px auto; /* Add space between image and title */
  }

  .page-width {
    max-width: 1500px;
    padding: 0 20px;
  }

  .notification-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-left: 110px;
    margin-right: 110px;
    gap: 10px;
  }

  .notification-block {
    flex: 1 1 calc(20% - 10px);
    padding: 20px; /* Add equal padding to each block */
    border-radius: 5px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center; /* Align children horizontally to the center */
    justify-content: flex-start; /* Align children to start vertically */
  }

  .notification-block img {
    max-width: 80%;
    border-radius: 5px;
    height: 53.07px;
    margin-bottom: 15px; /* Add space between image and title */
  }

  .button-wrapper {
    text-align: center;
    margin-top: 20px;
  }

  .dynamic-button {
    padding: 10px 30px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 1000;
    font-size: 12px;
    transition: background-color 0.3s ease;
    font-family: Open Sans;
  }

  .dynamic-button:hover {
    opacity: 0.85;
  }
</style>
