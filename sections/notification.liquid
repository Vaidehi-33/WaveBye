{% schema %}
{
  "name": "Notification",
  "settings": [],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#f8d7da"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="notification-section">
  <div class="page-width">
    <div class="notification-wrapper">
      {% for block in section.blocks %}
        <div class="notification-block" style="background-color: {{ block.settings.background_color }}">
          <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.message }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.notification-section {
  padding: 20px 0;
}

.notification-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.notification-block {
  flex: 1 1 calc(20% - 10px);
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 15px;
  text-align: center;
}

.notification-block img {
  max-width: 100%;
  height: auto;
  border-radius: 5px;
}

.notification-block h3 {
  margin: 10px 0 5px;
}

.notification-block p {
  margin: 0;
}
</style>
