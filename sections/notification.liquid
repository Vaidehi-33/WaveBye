{% schema %}
{
  "name": "Notification",
  "settings": [],
  "blocks": [
    {
      "type": "notification_block",
      "name": "Notification Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="notification-wrapper" style="background-color: white;">
  <div class="notification-section" style="background-color: #EEF1FF;">
    <div class="page-width">
      <div class="notification-wrapper">
        {% for block in section.blocks %}
          <div class="notification-block">
            <img src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.title }}">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.message }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.notification-wrapper {
  background-color: inherit;
  padding: 20px 0; /* Optional padding around the notification section */
}

.notification-section {
  max-width: 600px; /* Make the section smaller */
  background-color: #EEF1FF;
  margin: 0 auto; /* Center the section */
  padding: 20px;
  border-radius: 10px; /* Optional: rounded corners */
}

.page-width {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.notification-block {
  flex: 1 1 calc(50% - 10px); /* Adjust based on the content */
  padding: 15px;
  border-radius: 5px;
  text-align: center;
}

.notification-block img {
  max-width: 100%;
  height: auto;
  border-radius: 5px;
}

.notification-block h3 {
  margin: 10px 0 5px;
}

.notification-block p {
  margin: 0;
}
</style>
