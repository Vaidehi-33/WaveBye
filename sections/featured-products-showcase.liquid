<section class="product-showcase">
  <div class="section-header">
    <h2>{{ section.settings.section_title }}</h2>
  </div>
  <div class="products-grid">
    <div class="product-item">
      {% if section.settings.image_1 %}
        <img 
          src="{{ section.settings.image_1 | img_url: 'medium' }}" 
          alt="{{ section.settings.image_1_name }}" 
          width="{{ section.settings.image_1 | image_width: 'medium' }}" 
          height="{{ section.settings.image_1 | image_height: 'medium' }}"
        >
      {% else %}
        <p>No Image Available</p>
      {% endif %}
      <h3>{{ section.settings.image_1_name }}</h3>
      <p>{{ section.settings.image_1_description }}</p>
    </div>

    <div class="product-item">
      {% if section.settings.image_2 %}
        <img 
          src="{{ section.settings.image_2 | img_url: 'medium' }}" 
          alt="{{ section.settings.image_2_name }}" 
          width="{{ section.settings.image_2 | image_width: 'medium' }}" 
          height="{{ section.settings.image_2 | image_height: 'medium' }}"
        >
      {% else %}
        <p>No Image Available</p>
      {% endif %}
      <h3>{{ section.settings.image_2_name }}</h3>
      <p>{{ section.settings.image_2_description }}</p>
    </div>

    <div class="product-item">
      {% if section.settings.image_3 %}
        <img 
          src="{{ section.settings.image_3 | img_url: 'medium' }}" 
          alt="{{ section.settings.image_3_name }}" 
          width="{{ section.settings.image_3 | image_width: 'medium' }}" 
          height="{{ section.settings.image_3 | image_height: 'medium' }}"
        >
      {% else %}
        <p>No Image Available</p>
      {% endif %}
      <h3>{{ section.settings.image_3_name }}</h3>
      <p>{{ section.settings.image_3_description }}</p>
    </div>
  </div>
</section>

<style>
.product-showcase {
  text-align: center;
  padding: 3rem 12rem;
}

.product-showcase .section-header h2 {
  font-size: 30px;
  margin-bottom: 20px;
  color: #0A1F44;
  font-weight: 800;
}

.products-grid {
  display: flex;
  justify-content: space-between;
}

.product-item {
  width: 30%;
  text-align: center;
}

.product-item img {
  width: 100%;
  height: auto;
  margin-bottom: 15px;
}

.product-item h3 {
  font-size: 20px;
  margin-bottom: 10px;
  color: #6C86FE;
}

.product-item p {
  font-size: 14px;
  color: #0A1F44;
  
}
</style>

{% schema %}
{
  "name": "Product Showcase",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Featured Products"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "image_1_name",
      "label": "Image 1 Name",
      "default": "Product 1"
    },
    {
      "type": "textarea",
      "id": "image_1_description",
      "label": "Image 1 Description",
      "default": "Description for product 1."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "image_2_name",
      "label": "Image 2 Name",
      "default": "Product 2"
    },
    {
      "type": "textarea",
      "id": "image_2_description",
      "label": "Image 2 Description",
      "default": "Description for product 2."
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "image_3_name",
      "label": "Image 3 Name",
      "default": "Product 3"
    },
    {
      "type": "textarea",
      "id": "image_3_description",
      "label": "Image 3 Description",
      "default": "Description for product 3."
    }
  ],
  "presets": [
    {
      "name": "Product Showcase",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
