{% schema %}
{
  "name": "Custom Image Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Featured Products"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "image_1_name",
      "label": "Image 1 Name",
      "default": "Product 1"
    },
    {
      "type": "textarea",
      "id": "image_1_description",
      "label": "Image 1 Description",
      "default": "Description for product 1."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "image_2_name",
      "label": "Image 2 Name",
      "default": "Product 2"
    },
    {
      "type": "textarea",
      "id": "image_2_description",
      "label": "Image 2 Description",
      "default": "Description for product 2."
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "image_3_name",
      "label": "Image 3 Name",
      "default": "Product 3"
    },
    {
      "type": "textarea",
      "id": "image_3_description",
      "label": "Image 3 Description",
      "default": "Description for product 3."
    }
  ],
  "presets": [
    {
      "name": "Custom Image Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="custom-image-section">
  <div class="section-header">
    <h2>{{ section.settings.section_title }}</h2>
  </div>
  <div class="image-container">
    <div class="image-item">
      <img src="{{ section.settings.image_1 | image_url }}" alt="{{ section.settings.image_1_name }}">
      <h3>{{ section.settings.image_1_name }}</h3>
      <p>{{ section.settings.image_1_description }}</p>
    </div>
    <div class="image-item">
      <img src="{{ section.settings.image_2 | image_url }}" alt="{{ section.settings.image_2_name }}">
      <h3>{{ section.settings.image_2_name }}</h3>
      <p>{{ section.settings.image_2_description }}</p>
    </div>
    <div class="image-item">
      <img src="{{ section.settings.image_3 | image_url }}" alt="{{ section.settings.image_3_name }}">
      <h3>{{ section.settings.image_3_name }}</h3>
      <p>{{ section.settings.image_3_description }}</p>
    </div>
  </div>
</section>

<style>
.custom-image-section {
  text-align: center;
  padding: 20px;
}
.custom-image-section .image-container {
  display: flex;
  justify-content: space-between;
}
.custom-image-section .image-item {
  width: 30%;
}
.custom-image-section img {
  width: 100%;
  height: auto;
}
</style>
